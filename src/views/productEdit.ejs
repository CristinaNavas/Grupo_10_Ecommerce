<%- include("./partials/head") %>
<body>
    <%- include("./partials/header") %>

    <main  class="form"> 

        <h2>Editar el Producto <%= %></h2>

        <form action="/productos/edit/<%= productToEdit.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <!-- Nombre -->
            <div class="labInp" >
              <label class="lab" for="name">Producto</label>
              <input class="inp" type="text" required  value="<%= productToEdit.name%>" name="name"  id="name">
            </div>
            <!-- Precio -->
            <div class="labInp">
              <label class="lab" for="price">Precio</label>
              <input class="inp" type="number" required value="<%= productToEdit.price%>" name="price"  id="price" />
            </div>

            <!-- Descuento -->
            <div class="labInp">
              <label class="lab" for="discount">Descuento</label>
              <input class="inp" type="number" required value="<%= productToEdit.discount%>" name="discount"  id="discount" />
            </div>

            <!-- Tipo -->
            <div class="labInp">
              <label class="lab" for="type" class="">Tipo</label>
              <select name="type" id="type" class="inp">
                <option value="cuerdas">Cuerdas</option>
                <option value="viento">Viento</option>
                <option value="percusion">Percusión</option>
                <option value="electrico">Eléctrico</option>
              </select>
            </div>  
            <!-- Categoría -->
            <div class="labInp">
              <label class="lab" for="category" class="form-label">Categoría:</label>
              <select name="category" id="category" class="inp">
                <option value="">Elegí</option>
                <option value="in-sale">En oferta</option>
                <option value="visited">Últimos agregados</option>
              </select>
            </div>      

            <!-- Descripción -->
            <div class="labInp">
              <label class="lab" for="descripcionProducto">Descripción</label>
              <input class="inp" type="textarea" maxlenght="100" value="<%= productToEdit.description%>" name="desciption"  id="descipcionProducto">
            </div>

            <!-- Imagen -->
            <div class="labInp">
              <label class="lab" for="image">Imagen</label>
              <input class="inp" type="file" name="image"  id="image" required>
            </div>

            <!-- Botón -->
            <div class="boton-ingresar" >
               <button class="button-login" type="submit"> Guardar </button>  
            </div>
            
          </form>
    </main>

    <%- include("./partials/footer") %>
</body>

</html>

   